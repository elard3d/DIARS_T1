
<h1>Lista de Cuentas</h1>

<br />

<a href="/account/create"> Crear Cuenta</a>

<br />
<br />

<table class="table">
    <thead>
        <tr style="border-style:solid">
            <th>Id</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Edad</th>
            <th>DNI</th>
            <th>Genero</th>
            <th>Ciudad</th>
            <th>Direccion</th>
            <th>Correo</th>
            <th>Usuario</th>
            <th>Contraseña</th>
            <th></th>
            <th></th>


        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr style="border-style:solid">


                <td>@item.IdPersona</td>
                <td>@item.Nombre</td>
                <td>@item.Apellido</td>
                <td>@item.FachaNacimiento</td>
                <td>@item.Dni</td>
                <td>@item.Genero</td>
                <td>
                    @foreach (var ciudad in ViewBag.Ciudad)
                    {
                        if (ciudad.IdCiudad == item.Ciudad)
                        {
                            @ciudad.Nombre
                        }
                    }

                </td>
                <td>@item.Direccion</td>
                <td>@item.Correo</td>
                <td>@item.Usuario</td>
                <td>@item.Contraseña</td>

                
               
                <td>
                    <a href="/account/edit?id=">Editar</a>
                </td>
                <td>
                    <a href="/account/delete?id=">Eliminar</a>
                </td>
            </tr>

        }

    </tbody>

</table>